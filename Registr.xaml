<Page x:Class="Pizzeria.Registr"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pizzeria"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registr" Height="500" Width="1000">
    <Grid Margin="0,0,-5,0.6">
        <Grid>
            <Image Source="source/pizza.jpg"/>
        </Grid>
        <Label Content="Register" HorizontalAlignment="Left" Margin="415,10,0,0" VerticalAlignment="Top" Height="150" Width="190" FontSize="50"/>
        <TextBox x:Name="NameField" HorizontalAlignment="Left" Height="50" Margin="125,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="290" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" FontSize="22"/>
        <TextBox x:Name="SurnameField" HorizontalAlignment="Center" Height="50" Margin="125,262,590,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="290" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" FontSize="22"/>
        <TextBox x:Name="emailField" HorizontalAlignment="Stretch" Height="50" Margin="125,365,590,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="290" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" FontSize="22"/>


    </Grid>
</Page>
