<Window x:Class="Pizzeria.logowanie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pizzeria"
        mc:Ignorable="d"
        Title="logowanie" Height="450" Width="800">
    <Grid Margin="0,0,-5,0.6">
        <Grid.Background>
            <ImageBrush ImageSource="Resources/pizza_login.jpg"/>
        </Grid.Background>
        <Label Content="Napolitana" HorizontalAlignment="Left" Margin="278,10,0,0" VerticalAlignment="Top" Height="150" Width="250" FontSize="50" />
        <Label Content="Login" HorizontalAlignment="Left" Margin="101,101,0,237.4" VerticalAlignment="Center" Height="80" Width="150" FontSize="50"/>
        <Label Content="Hasło" HorizontalAlignment="Left" Margin="101,181,0,157.4" VerticalAlignment="Center" Height="80" Width="150" FontSize="50"/>
        <TextBox x:Name="loginField" HorizontalAlignment="Left" Height="50" Margin="278,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="290" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="22"/>
        <PasswordBox MaxLength="8" x:Name="hasloField" HorizontalAlignment="Stretch" Height="50" Margin="278,194,229,0"  VerticalAlignment="Top" Width="290" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="22"/>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Center"  Margin="101,333,446,0" VerticalAlignment="Top" Height="60" Width="250" FontSize="35" Background="BlanchedAlmond" Click="LoginButton_Click_1"/>
        <Button x:Name="registrButton" Content="Rejestracja" HorizontalAlignment="Center"  Margin="442,333,105,0" VerticalAlignment="Top" Height="60" Width="250" FontSize="35" Background="BlanchedAlmond" Click="registrButton_Click_2"/>
    </Grid>
</Window>
